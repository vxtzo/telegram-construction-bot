# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# OpenAI API Key (получить на platform.openai.com)
OPENAI_API_KEY=your_openai_key_here

# Database URL (для Railway автоматически заполнится)
DATABASE_URL=postgresql://user:password@localhost:5432/construction_bot

# Google Drive Credentials (JSON Service Account)
GOOGLE_DRIVE_CREDENTIALS={"type": "service_account", "project_id": "your-project", ...}

# Telegram IDs администраторов (через запятую)
ADMIN_TELEGRAM_IDS=123456789,987654321

# ID родительской папки на Google Drive
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

